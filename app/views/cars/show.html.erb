<% content_for :title, "Detalles del Auto" %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div id="<%= dom_id @car %>" class="card mb-4">
      <div class="card-header">
        <h2 class="mb-0">Detalles del Auto</h2>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-sm-4 text-muted">Número de Placa:</div>
          <div class="col-sm-8"><%= @car.plate_number %></div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4 text-muted">Modelo:</div>
          <div class="col-sm-8"><%= @car.model %></div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4 text-muted">Año:</div>
          <div class="col-sm-8"><%= @car.year %></div>
        </div>
      </div>
    </div>

    <!-- Botones alineados -->
    <div class="mt-3 d-flex justify-content-between">
      <!-- Botón gris alineado a la izquierda -->
      <%= link_to "Volver a la lista de autos", cars_path, class: 'btn btn-secondary' %>

      <div>
        <!-- Botones azul y rojo alineados a la derecha -->
        <%= link_to "Editar", edit_car_path(@car), class: 'btn btn-primary me-2' %>
      </div>
    </div>
  </div>
</div>
