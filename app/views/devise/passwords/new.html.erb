<% content_for :title, "Recuperar Contrase単a" %>

<div class="row justify-content-center">
  <div class="col-md-4">
    <h2 class="mb-4 text-center">多Olvidaste tu contrase単a?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(resource.errors.count, "error") %> impidieron enviar las instrucciones:</h4>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="d-grid">
        <%= f.submit "Enviarme instrucciones para restablecer la contrase単a", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
