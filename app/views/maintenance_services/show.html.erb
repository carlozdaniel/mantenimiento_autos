<% content_for :title, "Detalles del Servicio de Mantenimiento" %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <% if notice %>
      <div class="alert alert-success">
        <%= notice %>
      </div>
    <% end %>

    <div id="<%= dom_id @maintenance_service %>" class="card mb-4">
      <div class="card-header">
        <h2 class="mb-0">Detalles del Servicio de Mantenimiento</h2>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-sm-4 text-muted">Descripción:</div>
          <div class="col-sm-8"><%= @maintenance_service.description %></div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4 text-muted">Estado:</div>
          <div class="col-sm-8"><%= @maintenance_service.status.humanize %></div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4 text-muted">Fecha:</div>
          <div class="col-sm-8"><%= l(@maintenance_service.date) %></div>
        </div>
      </div>
    </div>

    <div class="mt-3 d-flex">
      <%= link_to "Volver a los servicios de mantenimiento", car_maintenance_services_path(@maintenance_service.car_id), class: 'btn btn-secondary me-2' %>
      <%= link_to "Editar", edit_car_maintenance_service_path(@maintenance_service.car_id, @maintenance_service), class: 'btn btn-primary me-2' %>
      <%= button_to "Eliminar", car_maintenance_service_path(@maintenance_service.car_id, @maintenance_service), method: :delete, data: { confirm: "¿Estás seguro de que deseas eliminar este servicio?" }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
