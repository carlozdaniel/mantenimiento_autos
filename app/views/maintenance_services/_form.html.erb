<%= form_with(model: [@car, @maintenance_service]) do |form| %>
  <% if @maintenance_service.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@maintenance_service.errors.count, "error") %> prohibieron guardar este servicio de mantenimiento:</h4>
      <ul>
        <% @maintenance_service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :status %>
    <%= form.select :status, MaintenanceService.statuses.keys.map { |status| [status.humanize, status] }, {}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= form.label :date %>
    <%= form.date_select :date, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class: 'btn btn-primary' %>
  </div>
<% end %>
